#--------------------------------------------------------------------
# CONFIGURACIÓN DE EJEMPLO - DENTALMX
#--------------------------------------------------------------------
# IMPORTANTE: Copie este archivo como .env y configure según su entorno
# cp .env.example .env
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
# Entorno de ejecución
# development = Modo desarrollo (muestra errores detallados)
# production = Modo producción (errores genéricos, optimizado)
CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
# URL base de la aplicación (DEBE terminar con /)
app.baseURL = 'http://localhost:8080/'

# Índice del archivo (dejar vacío si usa mod_rewrite)
app.indexPage = ''

# Zona horaria de la aplicación
app.defaultTimezone = 'America/Mexico_City'

# Locale por defecto
app.defaultLocale = 'es'

# Tipo de negociación de locale
app.negotiateLocale = false

# Locales soportados
app.supportedLocales = ['es', 'en']

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------
# Configuración de conexión a MySQL
database.default.hostname = localhost
database.default.database = engsigne_magic_dental
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix = 
database.default.port = 3306

# Configuración adicional de base de datos
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_unicode_ci
database.default.pConnect = false
database.default.DBDebug = false
database.default.strictOn = false
database.default.failover = []

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------
# Clave de encriptación (GENERAR UNA NUEVA en producción)
# Ejecute: php spark key:generate
encryption.key = 

# Driver de encriptación (OpenSSL recomendado)
encryption.driver = OpenSSL

# Cookie de seguridad
security.tokenName = 'csrf_token_dentalmx'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie_dentalmx'
security.expires = 7200
security.regenerate = true

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------
# Driver de sesiones (CodeIgniter\Session\Handlers\FileHandler recomendado)
app.sessionDriver = 'CodeIgniter\Session\Handlers\FileHandler'
app.sessionCookieName = 'dentalmx_session'
app.sessionExpiration = 7200
app.sessionSavePath = null
app.sessionMatchIP = false
app.sessionTimeToUpdate = 300
app.sessionRegenerateDestroy = false

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------
# Nivel de registro de logs
# 0 = Desactivado
# 1 = Errores críticos
# 2 = Errores y advertencias
# 3 = Errores, advertencias y notificaciones
# 4 = Todos los mensajes (debug)
logger.threshold = 4

# Formato de fecha en logs
logger.dateFormat = 'Y-m-d H:i:s'

#--------------------------------------------------------------------
# EMAIL (Opcional)
#--------------------------------------------------------------------
# Configuración para envío de correos electrónicos
# Requerido para notificaciones automáticas de citas

# Protocolo de envío (mail, sendmail, smtp)
email.protocol = smtp

# Dirección de correo remitente
email.fromEmail = noreply@tusitio.com
email.fromName = 'DentalMX'

# Configuración SMTP
email.SMTPHost = smtp.tusitio.com
email.SMTPUser = usuario@tusitio.com
email.SMTPPass = tu_contraseña
email.SMTPPort = 587
email.SMTPCrypto = tls

# Opciones adicionales
email.mailType = html
email.charset = utf-8
email.wordWrap = true

#--------------------------------------------------------------------
# UPLOAD
#--------------------------------------------------------------------
# Configuración de archivos subidos

# Tamaño máximo de archivo (en MB)
upload.maxSize = 10

# Tipos de archivo permitidos
upload.allowedTypes = jpg|jpeg|png|gif|pdf|doc|docx

# Ruta de almacenamiento (relativa a public/)
upload.uploadPath = uploads/

#--------------------------------------------------------------------
# PAGINATION
#--------------------------------------------------------------------
# Configuración de paginación
pager.perPage = 20

#--------------------------------------------------------------------
# CACHE
#--------------------------------------------------------------------
# Sistema de caché

# Handler de caché (file, redis, memcached, dummy)
cache.handler = file

# Tiempo de vida del caché (segundos)
cache.ttl = 3600

# Ruta de almacenamiento (solo para handler=file)
cache.storePath = writable/cache/

# Configuración Redis (si usa cache.handler = redis)
# cache.redis.host = 127.0.0.1
# cache.redis.password = null
# cache.redis.port = 6379
# cache.redis.timeout = 0
# cache.redis.database = 0

#--------------------------------------------------------------------
# CUSTOM SETTINGS - DENTALMX
#--------------------------------------------------------------------

# Nombre de la clínica
app.clinicName = 'Clínica Dental'

# Duración predeterminada de citas (minutos)
app.defaultAppointmentDuration = 30

# Hora de inicio de agenda
app.scheduleStartTime = '08:00'

# Hora de fin de agenda
app.scheduleEndTime = '20:00'

# Días laborales (1=Lunes, 7=Domingo)
app.workingDays = '1,2,3,4,5,6'

# Moneda
app.currency = 'MXN'
app.currencySymbol = '$'

# IVA (porcentaje)
app.taxRate = 16

# Recordatorios de citas
app.appointmentReminders = true
app.reminderHoursBefore = 24

# Backup automático
app.autoBackup = true
app.backupFrequency = 'daily'

# Modo mantenimiento
app.maintenanceMode = false

#--------------------------------------------------------------------
# NOTAS IMPORTANTES
#--------------------------------------------------------------------
# 1. NUNCA suba el archivo .env a repositorios públicos
# 2. Genere una nueva encryption.key para producción: php spark key:generate
# 3. Use contraseñas seguras para base de datos y SMTP
# 4. En producción, configure CI_ENVIRONMENT = production
# 5. Asegure permisos correctos: chmod 600 .env
# 6. Configure backup.path con ruta fuera de public/
# 7. Para SSL/HTTPS, actualice app.baseURL a https://
